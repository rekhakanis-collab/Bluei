// src/components/FaceDetectionLock.tsx
import { useEffect, useRef, useState } from "react";
import { Button } from "@/components/ui/button";
import { Card } from "@/components/ui/card";
import { useToast } from "@/hooks/use-toast";
import { Camera, Lock, Unlock, Scan } from "lucide-react";

type LockState = "locked" | "unlocked" | "scanning";

const FaceDetectionLock = () => {
  const videoRef = useRef<HTMLVideoElement>(null);
  const canvasRef = useRef<HTMLCanvasElement>(null);
  const [lockState, setLockState] = useState<LockState>("locked");
  const [isRegistered, setIsRegistered] = useState(false);
  const [stream, setStream] = useState<MediaStream | null>(null);
  const [isDetecting, setIsDetecting] = useState(false);
  const { toast } = useToast();

  const startCamera = async () => {
    try {
      const mediaStream = await navigator.mediaDevices.getUserMedia({
        video: { width: 640, height: 480 }
      });
      setStream(mediaStream);
      if (videoRef.current) {
        videoRef.current.srcObject = mediaStream;
      }
    } catch (error) {
      toast({
        title: "Camera Access Denied",
        description: "Please allow camera access to use face detection.",
        variant: "destructive",
      });
    }
  };

  const stopCamera = () => {
    if (stream) {
      stream.getTracks().forEach(track => track.stop());
      setStream(null);
    }
  };

  const simulateFaceDetection = () => {
    setIsDetecting(true);
    setLockState("scanning");
    
    setTimeout(() => {
      const faceDetected = Math.random() > 0.3;
      
      if (faceDetected) {
        if (isRegistered) {
          setLockState("unlocked");
          toast({
            title: "Access Granted",
            description: "Face recognized. System unlocked.",
          });
        } else {
          toast({
            title: "Face Not Registered",
            description: "Please register your face first.",
            variant: "destructive",
          });
          setLockState("locked");
        }
      } else {
        toast({
          title: "No Face Detected",
          description: "Please position your face in the frame.",
          variant: "destructive",
        });
        setLockState("locked");
      }
      setIsDetecting(false);
    }, 2000);
  };

  const registerFace = () => {
    setIsRegistered(true);
    toast({
      title: "Face Registered",
      description: "Your face has been registered successfully!",
    });
  };

  const lockSystem = () => {
    setLockState("locked");
    toast({
      title: "System Locked",
      description: "Face detection security activated.",
    });
  };

  useEffect(() => {
    return () => {
      stopCamera();
    };
  }, []);

  return (
    <div className="min-h-screen flex items-center justify-center p-4">
      <Card className="w-full max-w-2xl p-8 bg-card border-2 transition-all duration-300"
        style={{
          borderColor: lockState === "unlocked" ? "hsl(var(--success))" : 
                      lockState === "scanning" ? "hsl(var(--primary))" : 
                      "hsl(var(--locked))"
        }}>
        
        <div className="text-center mb-6">
          <div className="flex items-center justify-center mb-4">
            {lockState === "locked" && <Lock className="w-12 h-12 text-locked glow-locked" />}
            {lockState === "scanning" && <Scan className="w-12 h-12 text-primary glow-primary animate-pulse" />}
            {lockState === "unlocked" && <Unlock className="w-12 h-12 text-success glow-success" />}
          </div>
          <h1 className="text-3xl font-bold mb-2">Face Detection Lock</h1>
          <p className="text-muted-foreground">
            {lockState === "locked" && "System Locked"}
            {lockState === "scanning" && "Scanning Face..."}
            {lockState === "unlocked" && "Access Granted"}
          </p>
        </div>

        <div className="relative mb-6 rounded-lg overflow-hidden bg-secondary aspect-video">
          {stream ? (
            <>
              <video
                ref={videoRef}
                autoPlay
                playsInline
                className="w-full h-full object-cover"
              />
              <canvas
                ref={canvasRef}
                className="absolute top-0 left-0 w-full h-full"
              />
              {lockState === "scanning" && (
                <div className="absolute inset-0 border-4 border-primary glow-primary animate-pulse" />
              )}
            </>
          ) : (
            <div className="flex items-center justify-center h-full">
              <Camera className="w-16 h-16 text-muted-foreground" />
            </div>
          )}
        </div>

        <div className="flex flex-col gap-3">
          {!stream ? (
            <Button
              onClick={startCamera}
              className="w-full bg-primary hover:bg-primary/90 text-primary-foreground"
            >
              <Camera className="mr-2 h-4 w-4" />
              Start Camera
            </Button>
          ) : (
            <>
              {!isRegistered && (
                <Button
                  onClick={registerFace}
                  variant="secondary"
                  className="w-full"
                >
                  Register Face
                </Button>
              )}
              
              {lockState === "locked" && isRegistered && (
                <Button
                  onClick={simulateFaceDetection}
                  disabled={isDetecting}
                  className="w-full bg-primary hover:bg-primary/90 text-primary-foreground"
                >
                  {isDetecting ? "Scanning..." : "Unlock with Face"}
                </Button>
              )}
              
              {lockState === "unlocked" && (
                <Button
                  onClick={lockSystem}
                  variant="destructive"
                  className="w-full"
                >
                  Lock System
                </Button>
              )}
              
              <Button
                onClick={stopCamera}
                variant="outline"
                className="w-full"
              >
                Stop Camera
              </Button>
            </>
          )}
        </div>

        <div className="mt-6 text-center text-sm text-muted-foreground">
          {isRegistered ? (
            <p className="text-success">âœ“ Face registered</p>
          ) : (
            <p>Register your face to enable unlock</p>
          )}
        </div>
      </Card>
    </div>
  );
};

export default FaceDetectionLock;
